<%- include("partials/header") %>

<div
  class="header h-14 border-b-2 border-white flex flex-row items-center shadow-md fixed top-0 left-0 w-full z-10 bg-red-400 px-4">
  
  <img src="/images/logo.svg" alt="logo" class="h-10 w-10">

  <h2 class="ml-2 font-bold text-lg text-purple-600 font-poppins">Snapnest</h2>

  <div class="flex flex-row gap-2 ml-auto mr-4">
    <a href="/" class="mt-2 px-5 py-2 text-sm font-semibold">Home</a>
    <a href="/feed" class="mt-2 px-5 py-2 text-sm font-semibold">Feed</a>
    <a href="/register" class="mt-2 px-5 py-2 bg-red-600 rounded-md text-sm font-semibold">Logout</a>
  </div>

</div>

<div
  class="bg-[url('https://i.pinimg.com/1200x/b4/91/a5/b491a504a2c5714dc218349d7c8632ca.jpg')] bg-cover bg-center h-screen w-full flex justify-center items-center pt-20">

  <div class="h-auto w-96 bg-white rounded-2xl shadow-lg flex flex-col items-center p-6">
    
    <h1 class="text-2xl font-poppins font-bold mb-4">Add a new Post</h1>

    <form action="/add" method="post" class="flex flex-col text-sm items-center space-y-3 w-full" enctype="multipart/form-data"
      enctype="multipart/form-data">

      <input 
        type="text" 
        placeholder="Title" 
        class="w-full p-2 border rounded-xl" 
        name="title" 
        required 
      />

      <textarea 
        placeholder="Description" 
        class="w-full p-2 border rounded-xl h-[88px]" 
        name="description" 
        required
      ></textarea>

      <input 
        type="file" 
        class="w-full p-2 border font-bold bg-gray-200 rounded-xl" 
        name="selectfile"
        required 
      />

      <button
        type="submit"
        class="w-full bg-red-500 font-bold text-white py-2 rounded-2xl hover:bg-red-600 transition-all duration-200">
        Add Post
      </button>

    </form>
  </div>
</div>

<%- include("partials/footer") %>
