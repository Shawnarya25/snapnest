<% include ./partials/header.ejs %>
<div
            class="header h-14 border-white-2 flex flex-row items-center shadow-md fixed top-0 left-0 w-full z-10 bg-red-400">
            <img src="/images/logo.svg" alt="logo">
            <h2 class="font-bold text-lg text-purple-600 font-poppins">Snapnest</h2>

            <div class="flex flex-row gap-2 ml-auto mr-4">
                <a href="/" class="mt-2 px-5 py-2  text-sm font-semibold">Home</a>
                <a href="/feed" class="mt-2 px-5 py-2  text-sm font-semibold">Feed</a>
            </div>

        </div>
    <div class="bg-[url('/images/bgpin.jpg')] bg-cover bg-center h-screen w-full flex justify-center items-center">
        <div class="h-126 w-86 bg-white rounded-2xl shadow-lg flex flex-col items-center p-6">
            <h1 class="text-2xl font-poppins font-bold mb-4">Create an account</h1>
            <form action="/register" method="post" class="flex flex-col text-sm items-center space-y-3 w-full">
                <input type="text" placeholder="Username" class="w-full p-2 border rounded-xl" name="username" />
                 <input type="text" placeholder="name" class="w-full p-2 border rounded-xl" name="name" />
                <input type="email" placeholder="email" class="w-full p-2 border rounded-xl" name="email" />
                <input type="number" placeholder="contact" class="w-full p-2 border rounded-xl" name="contact" />
                <input type="password" placeholder="Password" class="w-full p-2 border rounded-xl" name="password" />
                <button type="submit"
                    class="w-full bg-red-500 font-bold text-white py-2 rounded-2xl hover:bg-red-600 transition-all duration-200">
                    Register
                </button>
                <p class="text-xs text-grey-100 text-center mt-4">
                    • By creating an account or using Snapnest, you agree to these Terms &
                    Conditions and our Privacy Policy.
                    If you don’t agree, please stop using the platform.
                </p>
                <a class="font-semibold text-xs black-200 inline-block" href="/">Already have an account?</a>
            </form>
        </div>
    </div>
    <% include ./partials/footer.ejs %>